# Next.js
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AI APIs
OPENAI_API_KEY=your-openai-key
GOOGLE_PROJECT_ID=your-google-project-id
NIJIVOICE_API_KEY=your-nijivoice-key

# Media Processing
FFMPEG_PATH=/usr/local/bin/ffmpeg
PATH_BGM=./public/sounds/default-bgm.mp3

# Storage
STORAGE_BUCKET=your-bucket-name

# GraphAI
GRAPHAI_LOG_LEVEL=info

# YouTube API (for admin publishing)
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:3000/api/auth/callback/youtube

# Podcast Host API (for admin publishing)
PODCAST_API_KEY=your-podcast-api-key

# Application settings
MAX_AUDIO_DURATION=1800 # 30 minutes in seconds
MAX_VIDEO_DURATION=900 # 15 minutes in seconds
DEFAULT_TTS=openai # openai or nijivoice
DEFAULT_TTS_VOICE=echo # OpenAI voice
DEFAULT_HOST_VOICE=nova # OpenAI voice
DEFAULT_GUEST_VOICE=onyx # OpenAI voice
DEFAULT_NIJIVOICE_ACTOR=001 # Nijivoice actor ID

# Quotas
FREE_TIER_MONTHLY_AUDIO=5
FREE_TIER_MONTHLY_VIDEO=3 